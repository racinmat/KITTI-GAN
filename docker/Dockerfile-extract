FROM python:2.7

RUN apt-get update && \
    apt-get install -y \
        libblas-dev \
        liblapack-dev \
        liblapacke-dev \
        gfortran \
        tk-dev \
        tk \
        tcl-dev \
        tcl \
        python-tk

RUN pip install --upgrade pip
RUN pip install \
        numpy \
        scipy \
        pillow \
        ruamel.yaml \
        matplotlib

RUN easy_install smop
